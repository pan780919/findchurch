<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"


    >
    <RelativeLayout

        android:layout_height="56dp"
        android:layout_width="match_parent"
        android:id="@+id/mylovelayout"


        >
        <ImageView
            android:id="@+id/myloveimg"
            android:background="@drawable/icon_store"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"></ImageView>


        <ImageView

            android:background="@drawable/icon_arrow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            ></ImageView>
        <TextView
            android:id="@+id/TextView_StoreName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="商圈名稱"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/myloveimg"
            ></TextView>
        <View
            android:layout_width="360dp"
            android:layout_height="2dp"
            android:background="#d9d9d9"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40dp"
            ></View>

    </RelativeLayout>
</LinearLayout><!-- From: file:/C:/Users/HYXEN20141227/Documents/findchurch/healthyFoodQandA/src/main/res/layout/ur_searchtypelayout.xml -->