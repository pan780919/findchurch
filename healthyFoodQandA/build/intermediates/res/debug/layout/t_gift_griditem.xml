<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout_Griditem"
    android:layout_marginTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="187dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ImageView_Box"
        android:layout_width="140dp"
        android:layout_height="103dp"
        android:layout_marginTop="8dp"
      	android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:duplicateParentState="true"
        android:src="@drawable/gift_default" />

    <LinearLayout
        android:id="@+id/LinearLayout_Main"
        android:layout_width="156dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gt_gift_list"
        android:duplicateParentState="true"
        android:paddingTop="100dp"
        android:paddingLeft="8dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextView_Name"
            style="@style/Gt_TextView"
            android:duplicateParentState="true"
            android:lines="2"
            android:layout_marginTop="12dp"
            android:text="@string/task"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:orientation="horizontal" >

            <TextView
                style="@style/Gt_TextView"
                android:text="@string/mission_point_need"
                android:textColor="@color/font_dark"
                android:textSize="14dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TextView_Point"
                style="@style/Gt_TextView"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="0"
                android:textColor="#f9835e"
                android:textSize="18dp" />

            <TextView
                style="@style/Gt_TextView"
                android:paddingLeft="4dp"
                android:text="@string/t_point"
                android:textColor="@color/font_dark"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ImageView_Full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/LinearLayout_Main"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:layout_alignRight="@+id/LinearLayout_Main"
        android:background="@drawable/icon_full"
        android:duplicateParentState="true" />

</RelativeLayout><!-- From: file:/C:/Users/HYXEN20141227/Desktop/HealthyFoodQandA/healthyFoodQandA/src/main/res/layout/t_gift_griditem.xml -->