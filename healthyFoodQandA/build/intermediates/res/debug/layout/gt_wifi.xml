<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/Top"
        style="@style/GtTop" >

        <ImageButton
            android:id="@+id/ImageButtonBack"
            style="@style/GtTopBack" />

        <TextView
            style="@style/GtIndex_TextView"
            android:layout_centerInParent="true"
            android:text="@string/index_wifi" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/wifi_bg" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TextViewDes" >

            <ImageView
                android:id="@+id/ImageViewWifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/wifi_off" />

            <TextView
                android:id="@+id/TextViewWifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImageViewWifi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/wifi_status_bg"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/wifi_state_off"
                android:textColor="@color/font_dark"
                android:textSize="16dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/TextViewDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="8dp"
            android:text="@string/wifi_des_title"
            android:textColor="@color/font_green"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/ImageViewTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextViewDes"
            android:layout_centerHorizontal="true"
            android:src="@drawable/wifi_tip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageViewTip"
            android:lineSpacingExtra="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/wifi_des_body"
            android:textColor="@color/font"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/ButtonDisconnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gt_button1_default"
            android:text="@string/wifi_btn_unconnect"
            android:textColor="@color/font_white"
            android:visibility="gone" />

        <Button
            android:id="@+id/ButtonConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gt_button1_default"
            android:text="@string/wifi_btn_connect"
            android:textColor="@color/font_white" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/C:/Users/HYXEN20141227/Desktop/HealthyFoodQandA/healthyFoodQandA/src/main/res/layout/gt_wifi.xml -->