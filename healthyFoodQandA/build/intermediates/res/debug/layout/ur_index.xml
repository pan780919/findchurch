<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ur.ur_flow.coupon.MyScrollView
        android:id="@+id/index_srollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/main_parent_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <!-- Main layout -->
            <RelativeLayout
                android:id="@+id/main_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/LayoutBanner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff">


                        <com.gtambit.gt.app.api.circleAD.AutoScrollViewPager
                            android:id="@+id/ViewPager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:flipInterval="30"
                            android:persistentDrawingCache="animation"
                            android:visibility="gone"/>

                        <com.gtambit.gt.app.api.circleAD.CirclePageIndicator
                            android:id="@+id/indicator"
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_alignParentBottom="true"
                            android:paddingTop="3dp"
                            android:visibility="gone"

                            app:fillColor="@color/indicator_show"
                            app:pageColor="@color/indicator_normal"
                            app:strokeColor="@color/indicator_normal"/>


                    </RelativeLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="94dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="#ffffff">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_marginTop="4dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <Button

                                    android:id="@+id/f_main_index_img_store"
                                    android:layout_width="64dp"
                                    android:layout_height="60dp"
                                    android:background="@drawable/s_btn_store"
                                    android:gravity="center_vertical"
                                    android:layout_gravity="center_horizontal"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:textColor="#5E4330"
                                    android:text="@string/f_home_btn_store"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="4dp"
                                    android:layout_centerInParent="true"

                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="4dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <Button
                                    android:id="@+id/f_main_index_img_life"
                                    android:layout_width="64dp"
                                    android:layout_height="60dp"
                                    android:background="@drawable/s_btn_life"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center_horizontal"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_alignBottom="@+id/button6"
                                    android:text="@string/f_home_btn_life"
                                    android:textSize="16sp"
                                    android:textColor="#5E4330"
                                    android:layout_marginTop="4dp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center_horizontal"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="4dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                >

                                <Button
                                    android:id="@+id/f_main_index_img_coupon"

                                    android:layout_width="64dp"
                                    android:layout_height="60dp"
                                    android:background="@drawable/s_btn_coupon"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center_horizontal"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_alignBottom="@id/f_main_index_img_coupon"
                                    android:layout_marginTop="4dp"
                                    android:layout_centerInParent="true"
                                    android:textColor="#5E4330"
                                    android:text="@string/f_home_btn_coupon"
                                    android:textSize="16sp"
                                    android:layout_gravity="center_horizontal"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lottle_layout"
                                android:layout_marginTop="4dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <Button
                                    android:id="@+id/f_main_index_img_member"
                                    android:layout_width="64dp"
                                    android:layout_height="60dp"
                                    android:background="@drawable/s_btn_lottle"
                                    android:layout_gravity="center_horizontal"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_centerInParent="true"
                                    android:textColor="#5E4330"
                                    android:text="@string/f_home_btn_lottle"
                                    android:textSize="16sp"
                                    android:layout_gravity="center_horizontal"/>
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ur_index_list"/>
        </LinearLayout>
    </ur.ur_flow.coupon.MyScrollView>


    <include
        android:id="@+id/drawer_listview"
        layout="@layout/ur_list_drawer_listview" />
    
</android.support.v4.widget.DrawerLayout>

