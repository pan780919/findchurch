<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/ur_c_tabPageIndicator_rg"
        style="@style/WMatchHWrap"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/ur_c_tabPageIndicator_rbtn_1"
            style="@style/WFullHWrap"
            android:layout_height="39dp"
            android:button="@null"
            android:background="@color/text_brown"
            android:gravity="center"
            android:textColor="@drawable/ur_s_tab_page_indicator_text_color"
            android:textSize="16sp"
            android:text="@string/ur_f_coupon_type_text_not_get"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/ur_c_tabPageIndicator_rbtn_2"
            style="@style/WFullHWrap"
            android:layout_height="39dp"
            android:button="@null"
            android:background="@color/text_brown"
            android:gravity="center"
            android:textColor="@drawable/ur_s_tab_page_indicator_text_color"
            android:textSize="16sp"
            android:text="@string/ur_f_coupon_type_text_got"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/text_brown">

        <View
            android:id="@+id/ur_c_tabPageIndicator_indi_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bk_orange"/>

        <View
            android:id="@+id/ur_c_tabPageIndicator_indi_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"/>

    </LinearLayout>

</LinearLayout>
