<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal"
    android:gravity="center_vertical">

    <ImageButton
        android:id="@+id/ur_title_view_btn_left_navi"
        style="@style/WWrapHMatch"
        android:src="@drawable/ur_s_btn_mainlist"
        android:background="@null"/>

    <RelativeLayout
        android:id="@+id/ur_title_layout_center"
        style="@style/WHWrapContent"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/ur_title_layout_title"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ur_title_layout_text_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/ur_title_layout_text_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                android:text="咖啡弄-敦化店"
                android:visibility="gone"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ur_title_layout_right"
        style="@style/WWrapHMatch"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true">

    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/Users/HYXEN20141227/Desktop/HealthyFoodQandA/healthyFoodQandA/src/main/res/layout/ur_title_view.xml -->