<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WMatchHWrap"
    android:paddingBottom="8dp">

    <LinearLayout
        android:id="@+id/ur_i_coupon_layout_item"
        style="@style/WMatchHWrap"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        android:orientation="vertical"
        android:background="@drawable/ur_s_coupon_list_i_bk">

        <ImageView
            android:id="@+id/ur_i_coupon_img_pic"
            style="@style/WMatchHWrap"
            android:layout_height="150dp"
            android:maxHeight="300dp"/>

        <!--<ur.ui_component.URNoEventWebView-->
            <!--android:id="@+id/ur_i_coupon_web_pic"-->
            <!--style="@style/WMatchHWrap"-->
            <!--android:layout_height="150dp"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:maxHeight="300dp"/>-->

        <TextView
            android:id="@+id/ur_i_coupon_text_title"
            style="@style/TextBlackTitle20SP"
            android:singleLine="true"
            android:text="新飲品-康藍寶，好友分享券買一送一"/>

        <LinearLayout
            style="@style/WMatchHWrap"
            android:orientation="horizontal">

            <TextView
                style="@style/TextBlackSubtitle16SP"
                android:layout_width="wrap_content"
                android:text="兌換時間:"
                android:id="@+id/tittleTime"/>

            <TextView
                android:id="@+id/ur_i_coupon_text_subtitle"
                style="@style/TextBlackSubtitle16SP"
                android:text="20150-10-10~20150-10-31"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ur_i_coupon_layout_tag"
            style="@style/WMatchHWrap"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ur_i_coupon_img_push"
                style="@style/WHWrapContent"
                android:src="@drawable/icon_push"/>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/ur_i_coupon_img_stamp"
        style="@style/WHWrapContent"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/ur_i_coupon_layout_item"
        android:layout_marginBottom="26dp"
        android:src="@drawable/stamp_use"/>

</RelativeLayout>
