<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/box"
    >
	<RelativeLayout 
	    android:layout_width="265dip"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="3dip"
	    >
	    <ImageView 
	        android:layout_width="30dip"
    		android:layout_height="30dip"
    		android:background="@drawable/box_icon_atm"
    		android:id="@+id/ImageView_TitileIcon"
    		android:layout_centerVertical="true"
	        />
	    <ImageButton 
	        android:layout_width="35dip"
    		android:layout_height="35dip"
    		android:background="@drawable/button_viewclose"
    		android:id="@+id/ImageButton_Close"
    		android:layout_alignParentRight="true"
    		android:layout_centerVertical="true"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:id="@+id/TextView_Titile"
    		android:layout_toRightOf="@id/ImageView_TitileIcon"
    		android:layout_toLeftOf="@id/ImageButton_Close"
    		android:layout_centerVertical="true"
    		android:layout_marginLeft="10dip"
    		android:textSize="20dip"
    		android:textColor="#FFFFFF"
    		android:gravity="center_vertical"
	        />
	</RelativeLayout>
	
	<ScrollView 
	    android:layout_width="265dip"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="15dip"
	    android:layout_marginBottom="5dip"
	    >
	    <LinearLayout 
	        android:layout_width="265dip"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical"
	        >
	        <TextView
			    android:id="@+id/TextView_Name"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="#414641"
			    android:textSize="18dip" 
			    />
	        <LinearLayout 
	            android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:layout_marginTop="10dip"
			    android:id="@+id/LinearLayout_Phone"
	            >
	            <TextView
				    android:id="@+id/TextView_Phone"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textColor="#414641"
				    android:textSize="18dip" 
				    android:layout_gravity="center_vertical"
				    />
	            <ImageButton 
			        android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:background="@drawable/button_tel"
		    		android:id="@+id/ImageButton_Phone"
		    		android:layout_gravity="center_vertical"
		    		android:layout_marginLeft="10dip"
			        />
	        </LinearLayout>
	        <TextView
			    android:id="@+id/TextView_Address"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="#414641"
			    android:textSize="18dip" 
			    android:layout_marginTop="10dip"
			    />
	        
	    </LinearLayout>
	</ScrollView>

</LinearLayout><!-- From: file:/C:/Users/HYXEN20141227/Documents/findchurch/healthyFoodQandA/src/main/res/layout/my_dialog.xml -->