<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/RelativeLayout_Sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_marginTop="7dip"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/TextView_SendDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dip"
            android:textColor="#ffffffff"
            android:textSize="12dip"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dip"
            android:text="@string/t_sent"
            android:textColor="#ffffffff"
            android:textSize="14dip" />
    </RelativeLayout>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <LinearLayout
        android:id="@+id/LinearLayout_Center"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/Top"
        android:orientation="vertical" >


        <RelativeLayout
            style="@style/WMatchHWrap"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp">

            <ImageView
                android:id="@+id/ImageView_Picture"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_margin="8dp" />

            <LinearLayout
                style="@style/WHWrapContent"
                android:layout_toRightOf="@id/ImageView_Picture"
                android:layout_alignBottom="@id/ImageView_Picture"
                android:layout_alignTop="@id/ImageView_Picture"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TextView_GiftName"
                    style="@style/TextBlackTitle24SP"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:orientation="horizontal"
                    style="@style/WHWrapContent">

                    <TextView
                        android:id="@+id/TextView_GiftPoint"
                        style="@style/TextOrangePoint20SP"
                        android:text="0"/>

                    <TextView
                        style="@style/TextBlackSubtitle16SP"
                        android:layout_marginLeft="4dp"
                        android:text="@string/ur_gen_unit_point"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/bk_yellow_deeper"
            android:orientation="horizontal"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="10dip"
                android:paddingTop="10dip" >

                <TextView
                    android:id="@+id/gift_exchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/t_gift_exchange_date"
                    android:textColor="#A1978D"
                    android:textSize="14dip"
                    />
                <TextView
                    android:id="@+id/TextView_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/subtitle_grey"
                    android:textSize="16dip"
                    android:text="2015/2/25"/>


            </LinearLayout>

            <ImageView
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:background="#ffdbdbdb"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="10dip"
                android:paddingTop="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/t_gift_exchange_num"
                    android:textColor="#A1978D"
                    android:textSize="14dip"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/TextView_Number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="#BF6330"
                        android:textSize="16dip"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="份"
                        android:textColor="#A1978D"
                        android:textSize="16dip"/>
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:background="#ffdbdbdb"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="10dip"
                android:paddingTop="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/t_gift_exchange_point"
                    android:textColor="#A1978D"
                    android:textSize="14dip"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/TextView_Point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:textColor="#BF6330"
                        android:textSize="16dip"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="點"
                        android:textColor="#A1978D"
                        android:textSize="16dip"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal" >

            <ImageView
                style="@style/WHWrapContent"
                android:background="@drawable/block"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:text="@string/t_gift_get_info"
                android:textColor="@color/text_brown"
                android:textSize="14dip"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/t_name"
                android:textColor="#A1978D"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/TextView_Name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#00000000"
                android:textColor="@color/text_brown"
                android:textSize="18dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/t_address"
                android:textColor="#A1978D"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/TextView_Address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#00000000"
                android:textColor="@color/text_brown"
                android:textSize="18dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/t_phone"
                android:textColor="#A1978D"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/TextView_Phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#00000000"
                android:phoneNumber="true"
                android:textColor="@color/text_brown"
                android:textSize="18dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_LineId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/t_line_id"
                android:textColor="#ff9e9e9e"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/TextView_LineId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#00000000"
                android:textColor="#ff6b6b6b"
                android:textSize="18dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/t_email"
                android:textColor="#ff9e9e9e"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/TextView_Email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#00000000"
                android:textColor="#ff6b6b6b"
                android:textSize="18dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_IdNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/t_id_num"
                android:textColor="#A1978D"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/TextView_IdNum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#00000000"
                android:textColor="@color/text_brown"
                android:textSize="18dip" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1" >

            <WebView
                android:id="@+id/WebView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dip" />

            <ProgressBar
                android:id="@+id/ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>


</RelativeLayout>