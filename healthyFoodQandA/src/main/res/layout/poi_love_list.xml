<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/LayoutItem"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#F6F4E9"

              >


    <LinearLayout
        android:id="@+id/LayoutPoiList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/ur_s_list_bk"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_weight="4"
          >
            <LinearLayout
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                >
                <ImageView
                    android:id="@+id/ImageViewStortePicture"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:background="@drawable/box" />
            </LinearLayout>

                <TextView
                    android:id="@+id/TextViewPoiKm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#F9835E"
                    android:text="0.0km"
                    android:layout_marginTop="8dp"
                    />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="4dp">
            <TextView
                android:id="@+id/TextViewPoiName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="榮僑汽車專業保養"
                android:textColor="@color/font"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/TextViewPoiTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="台北市中山區建國北路3段93巷5弄17號"
                android:textColor="#313131"
                android:textSize="16dp"
                android:layout_marginTop="4dp"
                />
            <TextView
                android:id="@+id/TextViewPoiAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="02-2516-9870"
                android:textColor="#8c8c8c"
                android:textSize="14dp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/TextViewstorecat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="輕食,咖啡,下午茶"
                android:textColor="#F9835E"
                android:textSize="14dp"
                android:layout_marginTop="4dp"
                />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>